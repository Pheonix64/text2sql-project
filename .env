# --- Configuration PostgreSQL/TimescaleDB ---
# Utilisateur administrateur (utilisé uniquement pour l'initialisation)
POSTGRES_DB=economic_data
POSTGRES_USER=admin
POSTGRES_PASSWORD=-+5Vd9$!@+.!/

# Utilisateur avec permissions restreintes (lecture seule) pour le LLM
LLM_USER=llm_user
LLM_PASSWORD=/-+3Vd9$!D@12

# --- Configuration de l'API FastAPI ---
API_PORT=8000

# --- Configuration ChromaDB ---
CHROMA_HOST=chroma-db
CHROMA_PORT=8000
CHROMA_COLLECTION=economic_data_index

# --- Configuration Ollama ---
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://ollama:11434
LLM_MODEL=mistral:7b

# --- Configuration du Modèle d'Embedding ---
# Modèle optimisé pour la similarité de code SQL
EMBEDDING_MODEL_NAME=s2593817/sft-sql-embedding